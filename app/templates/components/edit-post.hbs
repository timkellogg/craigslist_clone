<a {{action 'deletePost' model}}><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>

{{#if showEditForm}}
  <div class="ind-edit-form">
    <a {{action 'hideEdit'}}>Cancel Edit</a>
    <form>
      <div class="form-group">
        <label for="title">title</label>
        {{input value=title id="title" class="form-control" value=title placeholder=model.title}}
      </div>

      <div class="form-group">
        <label for="body">body</label>
        {{textarea rows=5 id="body" class="form-control" value=model.body}}
      </div>

      <div class="form-group">
        <label for="price">price</label>
        {{input type="number" value=price id="price" class="form-control" value=price placeholder=model.price}}
      </div>

      <div class="form-group">
        <label for="image">add a pic</label>
        {{input value=image id="image" class="form-control" value=image placeholder=model.image}}
      </div>

      <div class="form-group">
        <label for="address">Address</label>
        {{input value=address id="address" class="form-control" placeholder=model.address}}
      </div>

      <div class="form-group">
        <label for="zip">Zip</label>
        {{input type="number" value=zip id="zip" class="form-control" placeholder=model.zip}}
      </div>

      <div class="row">
        <button class="btn btn-primary pull-right" {{action 'editPost' model}} >Submit Edit</button>
      </div>
    </form>
  </div>
{{else}}
  <a {{action 'showEdit'}}><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
{{/if}}
